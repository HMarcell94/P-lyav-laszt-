@page "/jobs"

<PageTitle>jobs</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="jobs" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px" ExpandMode=DataGridExpandMode.Single  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@jobs" TItem="PalyavalasztoV2.Models.main.job" RowDoubleClick="@EditRow" RowExpand="@GetChildData">
            <Columns>
                <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.job" Property="JobID" Title="Job I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.job" Property="employer.PasswordHash" Title="employer">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.job" Property="Title" Title="Title">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.job" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.job" Property="LocationId" Title="Location Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.job" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="job">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, job)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
            <Template Context="job">

                    <RadzenStack Class="rz-my-8">
                        <RadzenRow Gap="0" AlignItems="AlignItems.Center">
                            <RadzenColumn Size="12" SizeMD="6">
                                <RadzenText Visible="@(job != null)" Text="applications" TextStyle="TextStyle.H4" TagName="TagName.H2" style="margin: 0" />
                            </RadzenColumn>
                            <RadzenColumn Size="12" SizeMD="6">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                                    <RadzenButton Visible="@(job != null)" Icon="add_circle_outline" Text="Add" Click=@(args => applicationsAddButtonClick(args,job)) />
                                </RadzenStack>
                            </RadzenColumn>
                        </RadzenRow>
                        <RadzenDataGrid ColumnWidth="200px" Visible="@(job != null)" @ref=applicationsDataGrid AllowFiltering="true" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                          Data="@job?.applications" TItem="PalyavalasztoV2.Models.main.application"  RowDoubleClick="@(args => applicationsRowSelect(args, job))">
                          <Columns>
                            <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.application" Property="ApplicationID" Title="Application I D">
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.application" Property="job.Description" Title="job">
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.application" Property="supportrole.userID" Title="supportrole">
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.application" Property="role.RoleName" Title="role">
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.application" Property="employee.PasswordHash" Title="employee">
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.application" Property="ApplicationDate" Title="Application Date">
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="PalyavalasztoV2.Models.main.application" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                                <Template Context="applicationChild">
                                    <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium" Shade="Shade.Lighter" Variant="Variant.Flat"
                                        Click=@(args => applicationsDeleteButtonClick(args, applicationChild)) @onclick:stopPropagation="true" />
                                </Template>
                            </RadzenDataGridColumn>
                          </Columns>
                        </RadzenDataGrid>
                    </RadzenStack>
            </Template>
        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
