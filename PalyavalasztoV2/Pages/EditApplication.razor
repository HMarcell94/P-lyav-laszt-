@page "/edit-application"

<PageTitle>Edit application</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save application</RadzenAlert>
        <RadzenTemplateForm TItem="PalyavalasztoV2.Models.main.application" Data="@application" Visible="@(application != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Application I D" Component="ApplicationID" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@application.ApplicationID" Name="ApplicationID" />
                    <RadzenRequiredValidator Component="ApplicationID" Text="ApplicationID is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="job" Component="job" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@jobsForJobId" TextProperty="Description" ValueProperty="JobID" AllowClear=true
                        Disabled=@(hasJobIdValue) Placeholder="Choose job" style="display: block; width: 100%" @bind-Value="@application.JobId" Name="JobId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="supportrole" Component="supportrole" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@supportrolesForEmployeeId" TextProperty="userID" ValueProperty="userID" AllowClear=true
                        Disabled=@(hasEmployeeIdValue) Placeholder="Choose supportrole" style="display: block; width: 100%" @bind-Value="@application.EmployeeId" Name="EmployeeId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="role" Component="role" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@rolesForEmployeeId" TextProperty="RoleName" ValueProperty="RoleID" AllowClear=true
                        Disabled=@(hasEmployeeIdValue) Placeholder="Choose role" style="display: block; width: 100%" @bind-Value="@application.EmployeeId" Name="EmployeeId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="employee" Component="employee" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@employeesForEmployeeId" TextProperty="PasswordHash" ValueProperty="EmployeeId" AllowClear=true
                        Disabled=@(hasEmployeeIdValue) Placeholder="Choose employee" style="display: block; width: 100%" @bind-Value="@application.EmployeeId" Name="EmployeeId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Application Date" Component="ApplicationDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@application.ApplicationDate" Name="ApplicationDate" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

