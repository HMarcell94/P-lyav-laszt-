    }

    private void NavigateToKapcsolat() //Főoldalra
    {
        NavigationManager.NavigateTo("kapcsolat");
    }

    private void NavigateToOneletrajz() //Főoldalra
    {
        NavigationManager.NavigateTo("oneletrajz");
    }

    private void NavigateToRegistrationCo() //Főoldalra
    {
        NavigationManager.NavigateTo("registrationco");
    }

    private void NavigateToRegistrationUser() //Főoldalra
    {
        NavigationManager.NavigateTo("registration-user");
    }

    private void NavigateToEmployeeProfile() //Főoldalra
    {
        NavigationManager.NavigateTo("EmployeeProfile");
    }

    private void NavigateToHirdetesek() //Főoldalra
    {
        NavigationManager.NavigateTo("Hirdetesek");
    }

    private void NavigateToLogin() //Főoldalra
    {
        NavigationManager.NavigateTo("Login");
    }

    private void NavigateToRegistration() //Főoldalra
    {
        NavigationManager.NavigateTo("Registration");
    }
 
}
